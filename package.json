  },
  "keywords": [
    "github-actions",
    "release"
  ],
  "author": "d_firecracker",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fire-cracker/github-actions-playground/issues"
  },
  "homepage": "https://github.com/fire-cracker/github-actions-playground#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3"
  }
